
@{
    ViewData["Title"] = "Index";
}

<h1>Sales Records</h1>

<div class="row">
    <div class="col-md-6 ">
        <form asp-action="SimpleSearch">
            <fieldset>
                <legend>Simple Search</legend>
                <div class="form-group row mb-3">
                    <label for="minDate" class="col-sm-2 col-form-label control-label">Min Date</label>
                    <div class="col-sm-10">
                        <input type="date" name="minDate" class="form-control" />
                    </div>
                </div>
                <div class="form-group row mb-3">
                    <label for="maxDate" class="col-sm-2 col-form-label control-label">Max Date</label>
                    <div class="col-sm-10">
                        <input type="date" name="maxDate" class="form-control" />
                    </div>
                </div>
                <div class="form-group row mb-3">
                    <div class="col-sm-10 col-lg-offset-2">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <form asp-action="GroupingSearch">
            <fieldset>
                <legend>Grouping Search</legend>
                <div class="form-group row mb-3">
                    <label for="minDate" class="col-sm-2 col-form-label control-label">Min Date</label>
                    <div class="col-sm-10">
                        <input type="date" name="minDate" class="form-control" />
                    </div>
                </div>
                <div class="form-group row mb-3">
                    <label for="maxDate" class="col-sm-2 col-form-label control-label">Max Date</label>
                    <div class="col-sm-10">
                        <input type="date" name="maxDate" class="form-control" />
                    </div>
                </div>
                <div class="form-group row mb-3">
                    <div class="col-sm-10 col-lg-offset-2">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
</div>