@model IEnumerable<SalesWebMvc.Models.SalesRecord>

@{
    ViewData["Title"] = "SimpleSearch";
}

<h2>Simple Search</h2>

<nav class="navbar navbar-expand-sm navbar-toggleable-sm">
    <div class="container-fluid">
        <form class="d-flex" role="search">
            <label class="navbar-brand text-white" for="minDate">Min Date</label>
            <input type="date" class="form-control me-2" value=@ViewData["minDate"] />
            <label class="navbar-brand text-white" for="maxDate">Max Date</label>
            <input type="date" class="form-control me-2" value=@ViewData["maxDate"] />
            <button type="submit" class="btn btn-primary">Filter</button>
        </form>
    </div>
</nav>
<div class="card bg-secondary">
    <h3 class="card-header">Toltal slaes = @Model.Sum(sr => sr.Amount).ToString("F2")</h3>
    <div class="card-body">
        <table class="table table-striped table-hover">
            <thead>
                <tr class="success">
                    <th>@Html.DisplayNameFor(Model => Model.Id)</th>
                    <th>@Html.DisplayNameFor(Model => Model.Date)</th>
                    <th>@Html.DisplayNameFor(Model => Model.Seller)</th>
                    <th>@Html.DisplayNameFor(Model => Model.Seller.Department)</th>
                    <th>@Html.DisplayNameFor(Model => Model.Amount)</th>
                    <th>@Html.DisplayNameFor(Model => Model.Status)</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Id)</td>
                        <td>@Html.DisplayFor(modelItem => item.Date)</td>
                        <td>@Html.DisplayFor(modelItem => item.Seller)</td>
                        <td>@Html.DisplayFor(modelItem => item.Seller.Department)</td>
                        <td>@Html.DisplayFor(modelItem => item.Amount)</td>
                        <td>@Html.DisplayFor(modelItem => item.Status)</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

