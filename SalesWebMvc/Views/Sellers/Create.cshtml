@model SalesWebMvc.Models.ViewModels.SellerFormViewModel

@{
    ViewData["Title"] = "Create";
}

<h2>Add Seller</h2>

<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="Create">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group row mb-3">
                <label asp-for="Seller.Name" class="col-sm-2 col-form-label control-label"></label>
                <input asp-for="Seller.Name" class="col-sm-6" />
                <span asp-validation-for="Seller.Name" class="text-danger"></span>
            </div>
            <div class="form-group row mb-3">
                <label asp-for="Seller.Email" class="col-sm-2 col-form-label control-label"></label>
                <input asp-for="Seller.Email" class="col-sm-6" />
                <span asp-validation-for="Seller.Email" class="text-danger"></span>
            </div>
            <div class="form-group row mb-3">
                <label asp-for="Seller.BirthDate" class="col-sm-2 col-form-label control-label"></label>
                <input asp-for="Seller.BirthDate" class="col-sm-6" />
                <span asp-validation-for="Seller.BirthDate" class="text-danger"></span>
            </div>
            <div class="form-group row mb-3">
                <label asp-for="Seller.BaseSalary" class="col-sm-2 col-form-label control-label"></label>
                <input asp-for="Seller.BaseSalary" class="col-sm-6" />
                <span asp-validation-for="Seller.BaseSalary" class="text-danger"></span>
            </div>
            <div class="form-group row mb-3">
                <label asp-for="Seller.DepartmentId" class="col-sm-2 col-form-label control-label"></label>
                <select asp-for="Seller.DepartmentId" class="col-sm-6"
                        asp-items="@(new SelectList(Model.Departments, "Id", "Name"))" class="form-control"></select>
            </div>
            <p></p>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div align="right"><a asp-action="Index">Back to List</a></div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_validationScriptsPartial");
    }
}